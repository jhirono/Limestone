
<div class="row">
<h4>人気のクライミングジムリスト</h4>
<% @ranking.each do |indoor|%>
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <img src="<%=indoor.image_url%>" alt="<%=indoor.name%>" style="height:200px; width:100%">
      <div class="caption">
      <h6><a href="/indoors/<%= indoor.id%>"><%=indoor.name[0,20]%></a></h6>
        <p>
          <a href="" class="btn btn-default btn-sm" role="button">お気に入りに追加</a>
          <a href="/indoors/<%= indoor.id%>" class="btn btn-default btn-sm" role="button">課題を記録する</a>
        </p>
        <span class="label label-primary"><%=indoor.prefecture%></span>
      </div>
    </div>
  </div>
<% end %>

</div>
