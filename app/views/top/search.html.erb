
<h4>いつも行くジムをお気に入りに登録しよう</h4>
<div class="input-group">
  <%= form_tag('/search', method: :get) do %>
    <input class="form-control" name="keyword" placeholder="ジム名を検索" type="text" value="">
    <button class="btn btn-default" title="検索" type="submit">Submit</button>
    </input>
  <% end %>
</div>


<% unless params[:keyword].blank?%>
  <div class="row">
  <h4>検索結果</h4>
    <% @indoors.each do |indoor|%>
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <img src="<%=indoor.image_url%>" alt="<%=indoor.name%>" style="height:200px; width:100%">
          <div class="caption">
          <h5><a href="/indoors/<%= indoor.id%>"><%=indoor.name[0,20]%></a></h5>
            <p><a href="#" class="btn btn-default" role="button">お気に入り</a> <a href="#" class="btn btn-default" role="button">課題を記録</a></p>
            <span class="label label-primary"><%=indoor.prefecture%></span>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>